# Environment Configuration Template

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/language_teacher
REDIS_URL=redis://localhost:6379

# API Keys - Get these from respective service providers
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
AZURE_API_KEY=your_azure_api_key_here
WATSON_API_KEY=your_watson_api_key_here

# Security Configuration
SECRET_KEY=your_secret_key_here_minimum_32_characters
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# File Upload Limits
MAX_FILE_SIZE_MB=100
ALLOWED_AUDIO_FORMATS=mp3,wav,webm,ogg
ALLOWED_VIDEO_FORMATS=mp4,webm,mov

# Analysis Settings
ANALYSIS_TIMEOUT_SECONDS=300
CACHE_ANALYSIS_RESULTS=True
CACHE_TTL_HOURS=24

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Development Settings
RELOAD_ON_CHANGE=True
AUTO_MIGRATE=True
SEED_DATABASE=False
